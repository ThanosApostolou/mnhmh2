{
    "name": "mnhmh2-server",
    "version": "1.0.0",
    "description": "",
    "main": "build/mnhmh2-server.js",
    "bin": "build/mnhmh2-server.js",
    "scripts": {
        "start": "nodemon .",
        "watch:server": "rimraf ./build && webpack --mode development --watch --color --progress",
        "watch:client": "cd ../mnhmh2-client && npx webpack --mode development --watch --color --progress -o ../mnhmh2-server/build/public",
        "watch": "concurrently npm:watch:server npm:watch:client",
        "build:server": "rimraf ./build && webpack --mode production --color --progress",
        "build:client": "cd ../mnhmh2-client && npx webpack --mode production --color --progress -o ../mnhmh2-server/build/public",
        "build": "npm run build:server && npm run build:client",
        "serve": "concurrently npm:watch npm:start",
        "pkg:win64": "npm run build && pkg -t node14-win-x64 --out-path packages/mnhmh2-win64 . && cp config.json packages/mnhmh2-win64",
        "pkg:win32": "npm run build && pkg -t node14-win-x86 --out-path packages/mnhmh2-win32 . && cp config.json packages/mnhmh2-win32",
        "pkg:linux64": "npm run build && pkg -t node14-linux-x64 --out-path packages/mnhmh2-linux64 . && cp config.json packages/mnhmh2-linux64",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "pkg": {
        "scripts": "build/**/*.js",
        "assets": [
            "build/assets/**/*",
            "build/public/**/*"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "concurrently": "^5.3.0",
        "eslint": "^7.20.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-webpack-plugin": "^2.5.1",
        "nodemon": "^2.0.7",
        "pkg": "^4.4.9",
        "rimraf": "^3.0.2",
        "ts-loader": "^8.0.17",
        "typescript": "^4.1.5",
        "webpack": "^5.22.0",
        "webpack-cli": "^4.5.0"
    },
    "dependencies": {
        "@types/express": "^4.17.11",
        "@types/mssql": "^6.0.7",
        "express": "^4.17.1",
        "mssql": "^6.3.1",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.32"
    }
}
